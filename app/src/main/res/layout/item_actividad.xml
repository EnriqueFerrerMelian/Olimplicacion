<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgActividad"
            android:layout_width="wrap_content"
            android:layout_height="225dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/actividad_ejercicio_r" />

        <TextView
            android:id="@+id/nombreActividad"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="275dp"
            android:layout_marginTop="-9dp"
            android:layout_marginEnd="16dp"
            android:text="ActividadNombre"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descripcionActividad"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/nombreActividad"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="228dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="12dp"
            android:text="ActividadDescripcion"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgActividad"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lunes"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:text="L"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/martes"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:text="M"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/miercoles"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:text="X"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@id/jueves"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:text="J"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/viernes"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:text="V"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sabado"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:text="S"
                android:textSize="24dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/domingo"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:paddingLeft="10dp"
                android:text="D"
                android:textSize="24dp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>