<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".actividades.DetallesActividadFragment"
    style="@style/SCREEN">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imagenActividad"
                android:layout_width="match_parent"
                android:layout_height="236dp"
                android:src="@drawable/actividad_ejercicio_r" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NombreActividad"
                    android:textAlignment="center"
                    android:textColor="#252525"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/descripcionActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DescripciÃ³n: "
                    android:textColor="#252525"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/profesorActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Profesor: "
                    android:textColor="#252525"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/vacantesActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vacnates: "
                    android:textColor="#252525"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/horariosActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Horarios: "
                    android:textColor="#252525"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/precioActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Precio: "
                    android:textColor="#252525"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lunes"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:paddingLeft="10dp"
                        android:text="L"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/martes"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:paddingLeft="10dp"
                        android:text="M"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/miercoles"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:paddingLeft="10dp"
                        android:text="X"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@id/jueves"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:paddingLeft="10dp"
                        android:text="J"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/viernes"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:paddingLeft="10dp"
                        android:text="V"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/sabado"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:paddingLeft="10dp"
                        android:text="S"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/domingo"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:paddingLeft="10dp"
                        android:text="D"
                        android:textSize="24dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/reservar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:text="Reservar"
                    android:textAllCaps="false"
                    style="@style/BUTTON"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/eliminarReserva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:text="Eliminar Reserva"
                    android:textAllCaps="false"
                    style="@style/BUTTON"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>